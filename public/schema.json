{
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "page_title": {
      "type": "string"
    },
    "delimiter": {
      "type": "string"
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "preserveDataOnReset": {
            "type": "boolean"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "description": "The title of the input"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "text",
                    "number",
                    "boolean",
                    "range",
                    "select",
                    "counter",
                    "timer"
                  ],
                  "description": "The type of input"
                },
                "required": {
                  "type": "boolean",
                  "description": "Whether this input is required"
                },
                "code": {
                  "type": "string",
                  "description": "A unique code for this input"
                },
                "disabled": {
                  "type": "boolean",
                  "description": "Whether this input is disabled"
                },
                "preserveDataOnReset": {
                  "type": "boolean",
                  "description": "Whether this input should be preserved when the scouting form is reset"
                },
                "value": {
                  "description": "The current value of the input"
                },
                "defaultValue": {
                  "description": "The default value of the input.  The value will be reset to this when the scouting form is reset.  If not provided, the value will be reset to something sensible based on the type of input."
                },
                "choices": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  },
                  "description": "The choices for a select input"
                },
                "min": {
                  "type": "number",
                  "description": "The minimum value for a number input"
                },
                "max": {
                  "type": "number",
                  "description": "The maximum value for a number input"
                },
                "autoIncrementOnReset": {
                  "type": "boolean",
                  "description": "Whether this input should auto-increment on reset, instead of resetting to the default value"
                }
              },
              "required": [
                "title",
                "type",
                "required",
                "code"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "name",
          "fields"
        ],
        "additionalProperties": false
      }
    },
    "$schema": {
      "type": "string"
    }
  },
  "required": [
    "title",
    "page_title",
    "delimiter",
    "sections"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
